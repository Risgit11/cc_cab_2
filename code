import 'package:flutter/material.dart';

void main() {
  runApp(const MyCabSharingApp());
}

class MyCabSharingApp extends StatelessWidget {
  const MyCabSharingApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: const LoginScreen(),
    );
  }
}

